<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gradient-to-r from-blue-100 via-green-100 to-pink-100">

    <!-- Navbar -->
    <nav class="fixed top-0 left-0 z-10 w-full p-4 bg-blue-600">
        <div class="flex items-center justify-between max-w-6xl mx-auto text-white">
            <a href="/" class="text-2xl font-semibold">StoryGen</a>
            <div class="space-x-6">
                <a href="/profile" class="hover:text-blue-200">Profile</a>
                <a href="/admin" class="hover:text-blue-200">Admin</a>
                <a href="/login" class="hover:text-blue-200">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Content Section -->
    <section class="max-w-4xl px-6 pt-24 mx-auto">
        <h1 class="mb-8 text-3xl font-bold text-center">Admin - User List</h1>

        <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
            <% users.forEach(user => { %>
                <div class="p-6 bg-white rounded-lg shadow-md">
                    <h2 class="mb-4 text-xl font-semibold text-gray-800"><%= user.username %></h2>
                    <ul class="space-y-2 text-gray-600">
                        <li><strong>Email:</strong> <%= user.email %></li>
                        <li><strong>Phone:</strong> <%= user.phone %></li>
                        <li><strong>Role:</strong> <%= user.role %></li>
                        <li><strong>Gender:</strong> <%= user.gender %></li>
                        <li><strong>Location:</strong> <%= user.location %></li>
                    </ul>
                    
                </div>
            <% }) %>
        </div>
    </section>

</body>
</html>
