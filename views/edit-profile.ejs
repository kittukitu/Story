<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex flex-col min-h-screen font-sans bg-gradient-to-r from-blue-100 via-green-100 to-pink-100">

    <!-- Navbar -->
    <nav class="fixed top-0 left-0 z-10 w-full p-4 bg-blue-600">
        <div class="flex items-center justify-between max-w-6xl mx-auto text-white">
            <a href="/" class="text-2xl font-semibold">StoryGen</a>
            <div class="space-x-6">
                <a href="/" class="hover:text-blue-200">Home</a>
                <a href="/profile" class="hover:text-blue-200">Profile</a>
                <a href="/login" class="hover:text-blue-200">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Edit Profile container -->
    <div class="flex flex-col items-center justify-center w-full h-full mt-24">
        <div class="w-full max-w-3xl p-8 bg-white border-2 border-gray-200 shadow-2xl rounded-2xl">

            <!-- Edit Profile Heading -->
            <h1 class="mb-6 text-4xl font-bold text-center text-transparent bg-gradient-to-r from-pink-500 to-yellow-500 bg-clip-text">
                Edit Profile
            </h1>

            <!-- Edit Profile Form -->
            <form action="/edit-profile" method="POST" class="space-y-6">
                
                <!-- Username -->
                <div class="flex flex-col">
                    <label for="username" class="text-lg font-medium text-gray-700">Username:</label>
                    <input type="text" id="username" name="username" value="<%= user.username %>" required class="px-4 py-2 mt-2 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                </div>

                <!-- Phone -->
                <div class="flex flex-col">
                    <label for="phone" class="text-lg font-medium text-gray-700">Phone:</label>
                    <input type="text" id="phone" name="phone" value="<%= user.phone %>" required class="px-4 py-2 mt-2 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                </div>

                <!-- Location -->
                <div class="flex flex-col">
                    <label for="location" class="text-lg font-medium text-gray-700">Location:</label>
                    <input type="text" id="location" name="location" value="<%= user.location %>" required class="px-4 py-2 mt-2 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                </div>

                <!-- Gender -->
                <div class="flex flex-col">
                    <label for="gender" class="text-lg font-medium text-gray-700">Gender:</label>
                    <select name="gender" id="gender" required class="px-4 py-2 mt-2 border-2 border-gray-300 rounded-lg focus:outline-none focus:border-blue-500">
                        <option value="Male" <%= user.gender === 'Male' ? 'selected' : '' %>>Male</option>
                        <option value="Female" <%= user.gender === 'Female' ? 'selected' : '' %>>Female</option>
                    </select>
                </div>

                <!-- Email (Non-editable) -->
                <div class="flex flex-col">
                    <label for="email" class="text-lg font-medium text-gray-700">Email:</label>
                    <input type="text" id="email" value="<%= user.email %>" disabled class="px-4 py-2 mt-2 bg-gray-100 border-2 border-gray-300 rounded-lg cursor-not-allowed">
                </div>

                <!-- Role (Non-editable) -->
                <div class="flex flex-col">
                    <label for="role" class="text-lg font-medium text-gray-700">Role:</label>
                    <input type="text" id="role" value="<%= user.role %>" disabled class="px-4 py-2 mt-2 bg-gray-100 border-2 border-gray-300 rounded-lg cursor-not-allowed">
                </div>

                <!-- Submit Button -->
                <div class="flex justify-center">
                    <button type="submit" class="px-6 py-3 font-semibold text-white transition-colors duration-300 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl hover:bg-gradient-to-r hover:from-blue-600 hover:to-purple-700">
                        Save Changes
                    </button>
                </div>

            </form>

        </div>
    </div>

</body>
</html>
